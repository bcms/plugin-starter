{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "importsNotUsedAsValues": "error",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@backend/*": ["../backend/*"],
      "@ui/*": ["./src/*"],
      "@bcms-ui/*": ["./src/bcms-ui/*"],
      "@becomes/cms-backend/*": ["../node_modules/@becomes/cms-backend/src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "../backend/**/*.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
