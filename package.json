{
  "name": "@becomes/cms-plugin-starter",
  "version": "1.0.0",
  "description": "Starter project for developing a plugin for the BCMS.",
  "author": "becomes.co",
  "scripts": {
    "start": "sirv public",
    "start:backend": "bcms --backend",
    "build:ui": "npm run build:backend && rollup -c",
    "build:backend": "tsc -p tsconfig.plugin.json",
    "dev:ui": "rollup -c -w",
    "dev:backend": "nodemon backend.js",
    "check": "svelte-check --fail-on-warnings --fail-on-hints --workspace src",
    "lint": "eslint ./src --ext .ts",
    "bundle": "node tools.js --bundle",
    "publish": "node tools.js --publish",
    "link": "node tools.js --link",
    "link:sudo": "node tools.js --link --sudo",
    "unlink": "node tools.js --unlink",
    "unlink:sudo": "node tools.js --unlink --sudo"
  },
  "devDependencies": {
    "@becomes/purple-cheetah": "^2.0.28",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@rollup/plugin-replace": "^2.4.1",
    "@rollup/plugin-typescript": "^8.0.0",
    "@tsconfig/svelte": "^1.0.0",
    "@types/express": "^4.17.11",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "eslint-plugin-svelte3": "^3.1.2",
    "express": "^4.17.1",
    "nodemon": "^2.0.7",
    "rollup": "^2.3.4",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "sirv-cli": "^1.0.0",
    "svelte": "^3.0.0",
    "svelte-check": "^1.0.0",
    "svelte-preprocess": "^4.0.0",
    "tslib": "^2.0.0",
    "typescript": "^4.0.0"
  },
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "git+https://github.com/becomesco/cms-plugin-starter.git"
  },
  "bugs": {
    "url": "https://github.com/becomesco/cms-plugin-starter/issues"
  },
  "homepage": "https://github.com/becomesco/cms-plugin-starter#readme",
  "nodemonConfig": {
    "watch": [
      "src/backend"
    ],
    "ext": "ts"
  }
}
